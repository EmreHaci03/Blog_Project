@model EntityLayer.Concrete.Blog
@{
    ViewBag.Title = "UpdateBlog";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<h2>Blog Güncelleme</h2>


<form class="form-group" method="post">

    @Html.Label("Blog ID:")
    @Html.TextBoxFor(x => x.BlogID, new { @class = "form-control" })
    <br />
    @Html.Label("Blog Başlığı:")
    @Html.TextBoxFor(x => x.BlogTitle, new { @class = "form-control" })
    @Html.ValidationMessageFor(x => x.BlogTitle)
    <br />
    @Html.Label("Kategoriler:")
    @Html.DropDownListFor(x => x.CategoryID, (List<SelectListItem>)ViewBag.values, new { @class = "form-control" })
    <br />

    @Html.Label("Yazarlar:")
    @Html.DropDownListFor(x => x.AuthorID, (List<SelectListItem>)ViewBag.value2, new { @class = "form-control" })
    <br />
    @Html.Label("Blog Tarih:")
    @Html.TextBoxFor(x => x.BlogDate, new { @class = "form-control" })
    <br />
    @Html.Label("Blog Resmi:")
    @Html.TextBoxFor(x => x.BlogImage, new { @class = "form-control" })
    <br />
    @Html.Label("İçerik:")
    @Html.TextAreaFor(x => x.BlogContent, 5, 15, new { @class = "form-control" })
    @Html.ValidationMessageFor(x => x.BlogContent)
    <br />

    @Html.HiddenFor(x => x.BlogRating)
    <button type="submit" class="btn btn-success ">Güncelle</button>
</form>

