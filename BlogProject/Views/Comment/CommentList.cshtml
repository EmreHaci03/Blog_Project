@model IEnumerable<EntityLayer.Concrete.Comment>

@using PagedList;
@using PagedList.Mvc;
<div class="pt-5">
    <h3 class="mb-5">Yorumlar</h3>
    <ul class="comment-list">
        @foreach (var item in Model)
        {
            if (item.CommentStatus == true)
            {
                <li class="comment">
                    <div class="vcard">
                        <img src="~/miniblog/images/User1.jpg" alt="Image placeholder">
                    </div>
                    <div class="comment-body">
                        <h3>@item.Username</h3>
                        <div class="meta">@(((DateTime)item.CommentDate).ToString("dd-MMMM-yyyy"))</div>
                        <p>@item.CommentContent</p>
                        <p><a href="#" class="reply rounded">Cevapla</a></p>
                    </div>
                </li>
            }

        }
    </ul>
    <!-- END comment-list -->
    @Html.Action("AddComment", "Comment")

</div>

