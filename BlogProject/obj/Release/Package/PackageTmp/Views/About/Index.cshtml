@model IEnumerable<EntityLayer.Concrete.About>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/Layout.cshtml";
}
@foreach (var item in Model)
{
    <div class="site-cover site-cover-sm same-height overlay single-page" style="background-image: url('/miniblog/images/img_4.jpg');">
        <div class="container">
            <div class="row same-height justify-content-center">
                <div class="col-md-12 col-lg-10">
                    <div class="post-entry text-center">
                       
                            <h1 class="">Hakkımızda</h1>
                            <p class="lead mb-4 text-white">Merhaba! Yazılım, teknoloji, yaşam ve daha fazlasını ele aldığımız blog sitemize hoş geldiniz. Burada sadece bilgi değil, deneyim ve ilham da bulacaksınız. Güncel içerikler, özgün yorumlar ve kaliteli yazılarla sizlerle buluşuyoruz.</p>
                        
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="site-section bg-light">
        <div class="container">
            <div class="row">
              
                    <div class="col-md-6 order-md-2">
                        <img src="@item.AboutImage1" alt="Image" class="img-fluid">
                    </div>
                    <div class="col-md-5 mr-auto order-md-1">
                        <h2>Biz Kimiz?</h2>

                        <p>@item.AboutContent1</p>
                        <ul class="ul-check list-unstyled success">
                            <li>Her gün yeni blog yazıları</li>
                            <li>3 Farklı Ülkeden Okuyucular</li>
                            <li>Sosyal Medyada 20 Bin Abone</li>
                        </ul>

                    </div>
                
            </div>
        </div>
    </div>
    @Html.Action("OurTeam", "About")

<div class="site-section bg-light">
    <div class="container">
        <div class="row">
            <div class="col-md-6">
                <img src="@item.AboutImage2" alt="Image" class="img-fluid">
            </div>
            <div class="col-md-5 ml-auto">
                <h2>Bizden Öğrenin</h2>
                <p class="mb-4">
                    Blog sayfamızda yazılım, teknoloji ve yaşam üzerine derinlemesine içerikler bulabilirsiniz.
                    Amacımız, karmaşık konuları basitleştirerek sizlere faydalı bilgiler sunmak ve ilham vermektir.
                    Her yazımızda deneyimlerimizi ve güncel gelişmeleri paylaşarak sizlerin bilgi birikimine katkıda bulunmayı hedefliyoruz.
                </p>

                <ul class="ul-check list-unstyled success">
                    <li>Güncel ve özgün makaleler</li>
                    <li>Pratik kod örnekleri ve ipuçları</li>
                    <li>Teknoloji dünyasından son trendler</li>
                </ul>
            </div>
        </div>
    </div>
</div>
}
    @Html.Action("Index", "Footer")
