
<div class="pt-5">
    <div class="comment-form-wrap pt-5">
        <h3 class="mb-5">Yorum Yapın</h3>
        <form method="post" class="p-5 bg-light">
            <div class="form-group">
                <label for="name">Adınız Soyadınız *</label>
                <input type="text" class="form-control" id="name" name="Username">
            </div>
            <div class="form-group">
                <label for="email">Mail *</label>
                <input type="email" class="form-control" id="email" name="Mail">
            </div>
            <input type="hidden" name="CommentDate" value="@DateTime.Now.ToLongDateString()" />
            <input type="hidden" name="BlogID" value="@ViewBag.id" />
            <div class="form-group">
                <label for="message">Mesajınız</label>
                <textarea name="CommentContent" id="message" cols="30" rows="10" class="form-control"></textarea>
            </div>
            <div class="form-group">
                <label for="message">Puanınız</label>
                <label>@Html.RadioButton("Rating", 1)1</label>
                <label>@Html.RadioButton("Rating", 2)2</label>
                <label>@Html.RadioButton("Rating", 3)3</label>
                <label>@Html.RadioButton("Rating", 4)4</label>
                <label>@Html.RadioButton("Rating", 5)5</label>
                 <label>@Html.RadioButton("Rating", 6)6</label>
                 <label>@Html.RadioButton("Rating", 7)7</label>
                 <label>@Html.RadioButton("Rating", 8)8</label>
                 <label>@Html.RadioButton("Rating", 9)9</label>
                 <label>@Html.RadioButton("Rating", 10)10</label>
            </div>
            <div class="form-group">
                <input type="submit" value="Yorum Yap" class="btn btn-primary">
            </div>

        </form>
        <div id="successMessage" class="alert alert-success" style="display:none;">
            Yorumunuz başarıyla gönderildi!
        </div>
    </div>
</div>