@model IEnumerable<EntityLayer.Concrete.Comment>
@{
    ViewBag.Title = "AdminCommentListTrue";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}




<body class="hold-transition sidebar-mini">
    
    <section class="content">
        <div class="container-fluid">
            <div class="row">
                <!-- /.col -->
                <div class="col-md-12">
                    <div class="card">
                        <div class="card-body">
                            <div class="tab-content">
                                <div class="active tab-pane" id="activity">
                                    @foreach (var item in Model)
                                    {
                                        <div class="post">
                                            <div class="user-block">
                                                <img class="img-circle img-bordered-sm" src="@item.Blogs.BlogImage" alt="user image">
                                                <span class="username">
                                                    <a href="#">@item.Username - @item.Blogs.BlogTitle</a>
                                                </span>
                                                <span class="description">@(((DateTime)item.CommentDate).ToString("dd-MMM-yyyy"))</span>
                                            </div>
                                            <!-- /.user-block -->
                                            <p>
                                                @item.CommentContent
                                            </p>
                                            <p> 
                                                <a href="#" class="link-black text-sm"> </a>
                                                <span class="float-right">
                                                    <a href="/Comment/StatusChangeToFalse/@item.CommentID/" class="link-black text-sm">
                                                        <i class="far fa-comments mr-1"></i> Yorumu Kaldır
                                                    </a>
                                                </span>
                                                <br />
                                            </p>
                                        </div>
                                        <!-- /.post -->
                                    }
                                </div>
                            </div>
                            <!-- /.tab-content -->
                        </div>
                    </div>
                </div>
                <!-- /.col -->
            </div>
             
        </div>
       
    </section>
        
  
</body>

