@model IEnumerable<EntityLayer.Concrete.Blog>
@{
    ViewBag.Title = "AdminBlogList";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<h2>Blog Listesi</h2>

<table class="table table-bordered">

    <th>ID</th>
    <th>Başlık</th>
    <th>Kategori</th>
    <th>Yazar</th>
    <th>Tarih </th>
    <th>Sil</th>
    <th>Güncelle</th>
    <th>Detaylar</th>
    <th>Yorumlar</th>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.BlogID</td>
            <td>@item.BlogTitle</td>
            <td>@item.Category.CategoryName</td>
            <td>@item.Author.NameSurname</td>
            <td>@(((DateTime)item.BlogDate).ToString("dd-MM-yyyy"))</td>
            <td><a href="/Blog/DeleteBlog/@item.BlogID" class="btn btn-danger">Sil</a></td>
            <td><a href="/Blog/UpdateBLog/@item.BlogID" class="btn btn-success">Güncelle</a></td>
            <td><a href="/Blog/BlogDetails/@item.BlogID" class="btn btn-warning">Detaylar</a></td>
            <td><a href="/Comment/GetCommentByBlog/@item.BlogID" class="btn btn-dark">Yorumlar</a></td>
        </tr>
    }
</table>
<a  href="/Blog/AddNewBlog/" class="btn btn-primary text-white">Yeni Blog Ekle</a>