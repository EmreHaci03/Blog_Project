@model IEnumerable<EntityLayer.Concrete.Blog>
@{
    ViewBag.Title = "AuthorBlogList";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}
@{ string color = "";}
@{ string status = "";}

<html>



<body class="hold-transition sidebar-mini">



    <!-- Main content -->

    <section class="content">



        <!-- Default box -->

        <div class="card">


            <div class="card-header">

                <h3 class="card-title">Blog Listesi</h3>

                <div class="card-tools">

                    <button type="button" class="btn btn-tool" data-card-widget="collapse" data-toggle="tooltip" title="Collapse">

                        <i class="fas fa-minus"></i>

                    </button>

                    <button type="button" class="btn btn-tool" data-card-widget="remove" data-toggle="tooltip" title="Remove">

                        <i class="fas fa-times"></i>

                    </button>

                </div>

            </div>

            <div class="card-body p-0">

                <table class="table table-striped projects">

                    <thead>

                        <tr>

                            <th style="width: 1%">

                                ID

                            </th>

                            <th style="width: 20%">

                                Blog Adı

                            </th>

                            <th style="width: 15%">

                                Beğeni Oranı

                            </th>

                            <th style="width: 13%" class="text-center">

                                Durum

                            </th>

                            <th style="width: 20%">

                            </th>

                        </tr>

                    </thead>

                    <tbody>
                        @foreach (var item in Model)
                        {
                            if ((item.BlogRating * 10) >= 85)
                            {
                                color = "text-white bg-success";
                                status = "Başarılı";
                            }
                            else if ((item.BlogRating * 10) >= 70 && (item.BlogRating * 10) <= 84)
                            {
                                color = "text-white bg-success";
                                status = "İyi";
                            }
                            else if ((item.BlogRating * 10) >= 50 && (item.BlogRating * 10) <= 69)
                            {
                                color = "text-white bg-warning";
                                status = "Orta";
                            }
                            else if ((item.BlogRating * 10) <= 50)
                            {
                                color = "text-white bg-danger";
                                status = "Zayıf";
                            }


                            <tr>

                                <td>

                                    @item.BlogID

                                </td>

                                <td>

                                    <a>

                                        @item.BlogTitle

                                    </a>

                                    <br />

                                </td>


                                <td class="project_progress">
                                    <div class="progress progress-sm">
                                        <div class="progress-bar bg-green" role="progressbar" aria-volumenow="@item.BlogRating" aria-volumemin="0" aria-volumemax="10" style="width: @(item.BlogRating*10)%">
                                        </div>
                                    </div>
                                    <small>
                                        @item.BlogRating / 10  Puan
                                    </small>
                                </td>

                                <td class="project-state">
                                    <span class="badge @color">@status</span>

                                </td>
                                <td class="project-actions text-right">



                                    <a class="btn btn-info btn-sm" href="/Blog/UpdateBlog/@item.BlogID">

                                        <i class="fas fa-pencil-alt">

                                        </i>

                                        Düzenle

                                    </a>

                                    <a class="btn btn-danger btn-sm" href="/Blog/DeleteBlog/@item.BlogID">

                                        <i class="fas fa-trash">

                                        </i>

                                        Sil

                                    </a>



                                </td>


                            </tr>

                        }

                    </tbody>
                </table>
                <br />
                  <a class="btn btn-success btn-sm ml-2" href="/Blog/AddNewBlog/">

                    <i class="fa fa-plus">

                    </i>

                      Blog Ekle
                </a>

            </div>
            <br />
            <!-- /.card-body -->

        </div>

        <!-- /.card -->

    </section>

</body>

</html>

