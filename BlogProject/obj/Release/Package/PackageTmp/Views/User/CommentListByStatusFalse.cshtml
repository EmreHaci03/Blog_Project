@model IEnumerable<EntityLayer.Concrete.Comment>
@{
    ViewBag.Title = "CommentListByStatusFalse";
    Layout = "~/Views/Shared/AuthorLayout.cshtml";
}


<body class="hold-transition sidebar-mini">

    <section class="content">
        <div class="container-fluid">
            <div class="row">
                <!-- /.col -->
                <div class="col-md-12">
                    <div class="card">
                        <div class="card-body">
                            <div class="tab-content">
                                <div class="active tab-pane" id="activity">
                                    @foreach (var item in Model)
                                    {
                                        <div class="post">
                                            <div class="user-block">
                                                <img class="img-circle img-bordered-sm" src="@item.Blogs.BlogImage" alt="user image">
                                                <span class="username">
                                                    <a href="#">@item.Username - @item.Blogs.BlogTitle</a>
                                                </span>
                                                <span class="description">@(((DateTime)item.CommentDate).ToString("dd-MMM-yyyy"))</span>
                                            </div>
                                            <!-- /.user-block -->
                                            <p>
                                                @item.CommentContent
                                            </p>
                                        </div>
                                        <!-- /.post -->
                                    }
                                </div>
                            </div>
                            <!-- /.tab-content -->
                        </div>
                    </div>
                </div>
                <!-- /.col -->
            </div>

        </div>

    </section>


</body>



