@model IEnumerable<EntityLayer.Concrete.Category>
@{
    ViewBag.Title = "AdminCategoryList";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}



<html>



<body class="hold-transition sidebar-mini">



    <!-- Main content -->

    <section class="content">



        <!-- Default box -->

        <div class="card">


            <div class="card-header">

                <h3 class="card-title">Kategoriler</h3>

                <div class="card-tools">

                    <button type="button" class="btn btn-tool" data-card-widget="collapse" data-toggle="tooltip" title="Collapse">

                        <i class="fas fa-minus"></i>

                    </button>

                    <button type="button" class="btn btn-tool" data-card-widget="remove" data-toggle="tooltip" title="Remove">

                        <i class="fas fa-times"></i>

                    </button>

                </div>

            </div>

            <div class="card-body p-0">

                <table class="table table-striped projects">

                    <thead>

                        <tr>

                            <th style="width: 1%">

                                ID

                            </th>

                            <th style="width: 20%">

                                Kategori Adı

                            </th>

                            <th style="width: 30%">

                                Aktif Yazar Sayısı

                            </th>

                            <th>

                                Aktif Blog Sayısı

                            </th>

                            <th style="width: 8%" class="text-center">

                                Durum

                            </th>

                            <th style="width: 20%">

                            </th>

                        </tr>

                    </thead>

                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>

                                <td>

                                    @item.CategoryID

                                </td>

                                <td>

                                    <a>

                                        @item.CategoryName

                                    </a>

                                    <br />

                                </td>

                                <td>

                                    <ul class="list-inline">

                                        <li class="list-inline-item">

                                            <a>Sayı</a>

                                        </li>

                                    </ul>

                                </td>

                                <td class="project_progress">
                                    asd
                                </td>

                                <td class="project-state">
                                    @if (item.CategoryStatus == true)
                                    {
                                        <span class="badge badge-success">Aktif</span>
                                    }
                                    else
                                    {
                                        <span class="badge badge-danger">Pasif</span>
                                    }

                                </td>

                                <td class="project-actions text-right">



                                    <a class="btn btn-info btn-sm" href="/Category/CategoryEdit/@item.CategoryID">

                                        <i class="fas fa-pencil-alt">

                                        </i>

                                        Düzenle

                                    </a>

                                    <a class="btn btn-success btn-sm" href="/Category/categoryEditStatus/@item.CategoryID">

                                        <i class="fas fa-trash">

                                        </i>

                                        Aktif

                                    </a>

                                    <a class="btn btn-danger btn-sm" href="/Category/CategoryDelete/@item.CategoryID">

                                        <i class="fas fa-trash">

                                        </i>

                                        Pasif

                                    </a>

                                </td>

                            </tr>
                        }
                    </tbody>

                </table>

            </div>

            <!-- /.card-body -->

        </div>

        <!-- /.card -->

    </section>
    <button class="btn btn-primary" data-toggle="modal" data-target="#Modal1">Yeni Kategori Ekle</button>
    <div class="modal" id="Modal1">
        <div class="modal-dialog">
            <div class="modal-content">
                <form method="post" action="/Category/AdminCategoryAdd/">
                    <div class="modal-header">
                        <h2 class="modal-title">Kategori EKleme Paneli</h2>
                    </div>
                    <div class="modal-body">
                        <label>Kategori Adı</label>
                        <input type="text" name="CategoryName" class="form-control" />
                        <br />
                        <label>Kategori Açıklaması</label>
                        <input type="text" name="CategoryDescription" class="form-control" />
                    </div>
                    <div class="modal-footer">
                        <button type="submit" class="btn btn-success">Kaydet</button>
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Kapat</button>
                    </div>
                </form>

            </div>
        </div>
    </div>
</body>

</html>



